apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: nrf-tls-cert
  namespace: telco
spec:
  commonName: nrf.telco.local
  dnsNames:
    - nrf.telco.local
    - nrf.telco.svc.cluster.local
    - nrf
    - localhost
  ipAddresses:
    - "127.0.0.1"
    - "127.0.0.10"
  secretName: nrf-tls-secret
  duration: 2160h # 90 days
  renewBefore: 720h # 30 days - cert-manager will auto-renew
  subject:
    organizationalUnits: ["free5GC NRF"]
    organizations: ["free5GC Project"]
  privateKey:
    algorithm: RSA
    size: 2048
    rotationPolicy: Always
  usages:
    - digital signature
    - key encipherment
    - server auth
    - client auth
  issuerRef:
    name: openbao-csr-signer
    kind: ClusterIssuer
    group: cert-manager.io
---    
